<project name="breakout" default="dist-all" basedir=".">
	<!-- set global properties for this build -->
	<property name="src" location="src" />
	<property name="src.main" location="src/main/java" />
	<property name="src.tools" location="src/tools/java" />
	<property name="src.update" location="src/update/java" />
	<property name="build.main" location="build/main" />
	<property name="build.tools" location="build/tools" />
	<property name="build.update" location="build/update" />
	<property name="demo" location="demo" />
	<property name="dist" location="dist" />
	<property name="tools.jar" value="breakout-tools.jar" />
	<property name="jogl-libs" location="C:/jogamp-all-platforms/jar" />
	<property name="swingx-lib" location="C:/Program Files/Java/swingx-1.6.4" />
	<property name="commons-io-lib" location="C:/Program Files/Java/commons-io-2.4" />
	<property name="snakeyaml-lib" location="C:/Program Files/Java/snakeyaml-1.11" />

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp>
			<format property="time.start" pattern="yyyy-MM-dd HH:mm" />
		</tstamp>
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build.main}" />
		<mkdir dir="${build.update}" />
	</target>
	
	<target name="buildstamp" depends="init">
		<filter token="timestamp" value="${time.start}" />
		<copy file="src/main/java/org/andork/breakout/version.properties.in" tofile="src/main/java/org/andork/breakout/version.properties" overwrite="true" filtering="true" preservelastmodified="true" />
	</target>

	<target name="compile-deps">
		<ant antfile="../andork-core/build.xml" inheritAll="false" target="dist" />
		<ant antfile="../andork-ui/build.xml" inheritAll="false" target="dist" />
		<ant antfile="../andork-plot/build.xml" inheritAll="false" target="dist" />
		<ant antfile="../andork-math/build.xml" inheritAll="false" target="dist" />
		<ant antfile="../andork-math3d/build.xml" inheritAll="false" target="dist" />
		<ant antfile="../andork-spatial/build.xml" inheritAll="false" target="dist" />
		<ant antfile="../andork-jogl-gl2es2-utils/build.xml" inheritAll="false" target="dist" />
		<ant antfile="../andork-jogl-gl2es2-swing/build.xml" inheritAll="false" target="dist" />
	</target>

	<target name="copy-deps-shared" depends="compile-deps">
		<mkdir dir="${dist}/lib" />
		<copy todir="${dist}/lib">
			<fileset dir="${jogl-libs}">
				<include name="gluegen-rt.jar" />
			</fileset>

			<fileset dir="${jogl-libs}/atomic">
				<include name="jogl-awt.jar" />
				<include name="jogl-core.jar" />
				<include name="jogl-gldesktop.jar" />
				<include name="nativewindow-core.jar" />
				<include name="nativewindow-awt.jar" />
				<include name="newt-core.jar" />
				<include name="newt-event.jar" />
				<include name="newt-awt.jar" />
				<include name="newt-ogl.jar" />
			</fileset>

			<fileset dir="../andork-core/dist/lib">
				<include name="andork-core.jar" />
				<include name="andork-core-sources.jar" />
			</fileset>

			<fileset dir="../andork-ui/dist/lib">
				<include name="andork-ui.jar" />
				<include name="andork-ui-sources.jar" />
			</fileset>

			<fileset dir="../andork-math/dist/lib">
				<include name="andork-math.jar" />
				<include name="andork-math-sources.jar" />
			</fileset>

			<fileset dir="../andork-math3d/dist/lib">
				<include name="andork-math3d.jar" />
				<include name="andork-math3d-sources.jar" />
			</fileset>

			<fileset dir="../andork-plot/dist/lib">
				<include name="andork-plot.jar" />
				<include name="andork-plot-sources.jar" />
			</fileset>

			<fileset dir="../andork-spatial/dist/lib">
				<include name="andork-spatial.jar" />
				<include name="andork-spatial-sources.jar" />
			</fileset>

			<fileset dir="../andork-jogl-gl2es2-utils/dist/lib">
				<include name="andork-jogl-gl2es2-utils.jar" />
				<include name="andork-jogl-gl2es2-utils-sources.jar" />
			</fileset>

			<fileset dir="../andork-jogl-gl2es2-swing/dist/lib">
				<include name="andork-jogl-gl2es2-swing.jar" />
				<include name="andork-jogl-gl2es2-swing-sources.jar" />
			</fileset>

			<fileset dir="${swingx-lib}">
				<include name="swingx-all-1.6.4.jar" />
			</fileset>

			<fileset dir="${commons-io-lib}">
				<include name="commons-io-2.4.jar" />
			</fileset>

			<fileset dir="${snakeyaml-lib}">
				<include name="snakeyaml-1.11.jar" />
			</fileset>
		</copy>
	</target>

	<target name="copy-resources">
		<copy todir="${build.main}">
			<fileset dir="${src.main}">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
		<copy todir="${build.update}">
			<fileset dir="${src.update}">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>

	<target name="copy-deps-win" depends="copy-deps-shared">
