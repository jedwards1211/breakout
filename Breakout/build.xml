	<target name="copy-deps-linux-i586" depends="copy-deps-linux">
		<copy todir="${dist}/lib">
			<fileset dir="${jogl-libs}">
				<include name="gluegen-rt-natives-linux-i586.jar" />
			</fileset>
			<fileset dir="${jogl-libs}/atomic">
				<include name="jogl-natives-linux-i586.jar" />
				<include name="nativewindow-natives-linux-i586.jar" />
