				<include name="lib/nativewindow-natives-windows-amd64.jar" />
				<include name="lib/nativewindow-natives-linux-i586.jar" />
				<include name="lib/nativewindow-natives-linux-amd64.jar" />
				<include name="lib/nativewindow-natives-macosx-universal.jar" />
				<include name="lib/newt-core.jar" />
				<include name="lib/newt-ogl.jar" />
				<include name="lib/newt-awt.jar" />
