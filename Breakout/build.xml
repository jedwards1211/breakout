				<include name="jogl-os-win.jar" />
				<include name="nativewindow-os-win.jar" />
				<include name="newt-driver-win.jar" />
			</fileset>
		</copy>
	</target>

	<target name="copy-deps-win-i586" depends="copy-deps-win">
