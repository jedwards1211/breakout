				<include name="lib/newt-driver-win.jar" />
				<include name="lib/newt-driver-x11.jar" />
				<include name="lib/newt-driver-osx.jar" />
				<include name="lib/newt-natives-windows-i586.jar" />
				<include name="lib/newt-natives-windows-amd64.jar" />
