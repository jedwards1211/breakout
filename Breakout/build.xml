	</target>

	<target name="compile-updater" depends="init,compile-deps,copy-deps-shared" description="compile the updater">
		<!-- Compile the java code from ${src.main} into ${build} -->
		<path id="master-classpath">
			<fileset dir="${dist}/lib">
				<include name="*.jar" />
			</fileset>
		</path>
		<javac debug="on" destdir="${build.update}">
			<src path="${src.update}" />
			<classpath refid="master-classpath" />
		</javac>
	</target>

	<target name="jar-updater" depends="compile-updater,copy-resources">
		<jar jarfile="${dist}/${ant.project.name}.jar" basedir="${build.update}" manifest="MANIFEST-update.MF" />
	</target>

	<target name="compile-main" depends="init,compile-deps,copy-deps-shared" description="compile the main source">
		<!-- Compile the java code from ${src.main} into ${build} -->
		<path id="master-classpath">
			<fileset dir="${dist}/lib">
				<include name="*.jar" />
			</fileset>
		</path>
		<javac debug="on" destdir="${build.main}">
			<src path="${src.main}" />
			<classpath refid="master-classpath" />
		</javac>
	</target>

	<target name="jar-base" depends="compile-main,copy-resources">
		<jar jarfile="${dist}/${ant.project.name}-base.jar" basedir="${build.main}" />
		<jar jarfile="${dist}/${ant.project.name}-base-sources.jar" basedir="${src.main}" />
	</target>

	<target name="dist-sources" depends="jar-base,copy-deps-shared" description="generate the source distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}" />

		<zip destfile="${dist}/${ant.project.name}-sources.zip">
			<fileset dir="${dist}">
				<include name="${ant.project.name}-base-sources.jar" />
				<include name="lib/andork-core-sources.jar" />
				<include name="lib/andork-ui-sources.jar" />
				<include name="lib/andork-math-sources.jar" />
				<include name="lib/andork-math3d-sources.jar" />
				<include name="lib/andork-plot-sources.jar" />
				<include name="lib/andork-spatial-sources.jar" />
				<include name="lib/andork-jogl-gl2es2-utils-sources.jar" />
				<include name="lib/andork-jogl-gl2es2-swing-sources.jar" />
			</fileset>
		</zip>
	</target>

	<target name="dist-win-i586" depends="jar-base,copy-deps-win-i586" description="generate the distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}" />

		<!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
		<jar jarfile="${dist}/${ant.project.name}-win-i586.jar" basedir="${build.main}" manifest="MANIFEST-win-i586.MF" />

		<!-- <delete file="${dist}/update.properties" /> -->
		<!-- <copy file="${basedir}/update-win-i586.properties" tofile="${dist}/update.properties" /> -->

		<!-- <touch file="lastUpdate" /> -->

		<zip destfile="${dist}/${ant.project.name}-win-i586.zip">
			<fileset dir="${basedir}">
				<include name="README.txt" />
				<!-- <include name="lastUpdate" /> -->
				<!-- <include name="update.properties" /> -->
			</fileset>
			<fileset dir="${dist}">
				<include name="${ant.project.name}-base.jar" />
				<include name="${ant.project.name}-win-i586.jar" />
				<include name="lib/swingx-all-1.6.4.jar" />
				<include name="lib/commons-io-2.4.jar" />
				<include name="lib/snakeyaml-1.11.jar" />
				<include name="lib/gluegen-rt.jar" />
				<include name="lib/andork-core.jar" />
				<include name="lib/andork-ui.jar" />
				<include name="lib/andork-math.jar" />
				<include name="lib/andork-math3d.jar" />
				<include name="lib/andork-plot.jar" />
				<include name="lib/andork-spatial.jar" />
				<include name="lib/andork-jogl-gl2es2-utils.jar" />
				<include name="lib/andork-jogl-gl2es2-swing.jar" />
				<include name="lib/jogl-awt.jar" />
				<include name="lib/jogl-core.jar" />
				<include name="lib/jogl-gldesktop.jar" />
				<include name="lib/nativewindow-core.jar" />
				<include name="lib/nativewindow-awt.jar" />
				<include name="lib/jogl-os-win.jar" />
				<include name="lib/nativewindow-os-win.jar" />
				<include name="lib/gluegen-rt-natives-windows-i586.jar" />
				<include name="lib/jogl-natives-windows-i586.jar" />
				<include name="lib/nativewindow-natives-windows-i586.jar" />
				<include name="lib/newt-core.jar" />
				<include name="lib/newt-event.jar" />
				<include name="lib/newt-awt.jar" />
				<include name="lib/newt-ogl.jar" />
				<include name="lib/newt-driver-win.jar" />
				<include name="lib/newt-natives-windows-i586.jar" />
			</fileset>
		</zip>
	</target>

	<target name="dist-all-desktops" depends="jar-base,copy-deps-win-i586,copy-deps-win-amd64,copy-deps-linux-i586,copy-deps-linux-amd64,copy-deps-macosx-universal" description="generate the distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}" />

		<!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
		<jar jarfile="${dist}/${ant.project.name}-all-desktops.jar" basedir="${build.main}" manifest="MANIFEST-all-desktops.MF" />

		<!-- <delete file="${dist}/update.properties" /> -->
		<!-- <copy file="${basedir}/update-win-i586.properties" tofile="${dist}/update.properties" /> -->

		<!-- <touch file="lastUpdate" /> -->

		<zip destfile="${dist}/${ant.project.name}-all-desktops.zip">
			<fileset dir="${basedir}">
				<include name="README.txt" />
				<!-- <include name="lastUpdate" /> -->
				<!-- <include name="update.properties" /> -->
			</fileset>
			<fileset dir="${dist}">
				<include name="${ant.project.name}-base.jar" />
				<include name="${ant.project.name}-all-desktops.jar" />
				<include name="lib/swingx-all-1.6.4.jar" />
				<include name="lib/commons-io-2.4.jar" />
				<include name="lib/snakeyaml-1.11.jar" />
				<include name="lib/andork-core.jar" />
				<include name="lib/andork-ui.jar" />
				<include name="lib/andork-math.jar" />
				<include name="lib/andork-math3d.jar" />
				<include name="lib/andork-plot.jar" />
