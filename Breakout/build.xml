	<target name="dist-all">
		<antcall target="dist-all-desktops" />
		<antcall target="dist-sources" />
	</target>

	<target name="dist-tools">
		<mkdir dir="${build.tools}" />
		<ant antfile="../andork-core/build.xml" inheritAll="false" target="compile" />
		<javac debug="on" srcdir="${src.tools}" destdir="${build.tools}" classpath="../andork-core/build" />
		<jar jarfile="${dist}/${tools.jar}">
			<fileset dir="${build.tools}" includes="**/*.class" />
			<fileset dir="../andork-core/build" includes="**/*.class" />
		</jar>
	</target>

	<target name="clean-and-dist-all">
		<antcall target="clean-all" />
		<antcall target="dist-all" />
	</target>

	<target name="clean" description="clean up">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build.main}" />
		<delete dir="${build.update}" />
		<delete dir="${dist}" />
	</target>

	<target name="clean-all" description="clean up all">
		<antcall target="clean" />
		<ant antfile="../andork-core/build.xml" inheritAll="false" target="clean" />
		<ant antfile="../andork-ui/build.xml" inheritAll="false" target="clean" />
		<ant antfile="../andork-plot/build.xml" inheritAll="false" target="clean" />
		<ant antfile="../andork-math/build.xml" inheritAll="false" target="clean" />
		<ant antfile="../andork-math3d/build.xml" inheritAll="false" target="clean" />
		<ant antfile="../andork-spatial/build.xml" inheritAll="false" target="clean" />
		<ant antfile="../andork-jogl-gl2es2-utils/build.xml" inheritAll="false" target="clean" />
		<ant antfile="../andork-jogl-gl2es2-swing/build.xml" inheritAll="false" target="clean" />
	</target>
</project>