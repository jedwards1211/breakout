<project name="FisherRidgeForever" default="dist" basedir=".">
	<!-- set global properties for this build -->
	<property name="src" location="src" />
	<property name="build" location="build" />
	<property name="dist" location="dist" />
	<property name="jogl-libs" location="C:/jogamp-all-platforms/jar" />

	<target name="init">
		<!-- Create the time stamp -->
		<tstamp />
		<!-- Create the build directory structure used by compile -->
		<mkdir dir="${build}" />
	</target>

	<target name="compile-dependencies">
		<ant antfile="../andork-core/build.xml" inheritAll="false" target="dist" />
		<ant antfile="../andork-plot/build.xml" inheritAll="false" target="dist" />
		<ant antfile="../andork-math/build.xml" inheritAll="false" target="dist" />
		<ant antfile="../andork-jogl-gl2es2-utils/build.xml" inheritAll="false" target="dist" />
	</target>

	<target name="copy-dependencies">
		<mkdir dir="${dist}/lib" />
		<copy todir="${dist}/lib">
			<fileset dir="C:/jogamp-all-platforms/jar">
				<include name="gluegen-rt.jar" />
				<include name="joal.jar" />
				<include name="jocl.jar" />
				<include name="jogl-all.jar" />
			</fileset>
			<fileset dir="../andork-core/dist/lib">
				<include name="*.jar" />
			</fileset>

			<fileset dir="../andork-math/dist/lib">
				<include name="*.jar" />
			</fileset>

			<fileset dir="../andork-plot/dist/lib">
				<include name="*.jar" />
			</fileset>

			<fileset dir="../andork-jogl-gl2es2-utils/dist/lib">
				<include name="*.jar" />
			</fileset>
		</copy>
	</target>

	<target name="compile" depends="init,compile-dependencies,copy-dependencies" description="compile the source ">
		<!-- Compile the java code from ${src} into ${build} -->
		<path id="master-classpath">
			<fileset dir="C:/jogamp-all-platforms/jar">
				<include name="gluegen-rt.jar" />
				<include name="joal.jar" />
				<include name="jocl.jar" />
				<include name="jogl-all.jar" />
			</fileset>
			
			<fileset dir="${dist}/lib">
				<include name="*.jar" />
			</fileset>
		</path>
		<javac debug="on" destdir="${build}">
			<src path="${src}" />
			<classpath refid="master-classpath" />
		</javac>
	</target>

	<target name="dist" depends="compile" description="generate the distribution">
		<!-- Create the distribution directory -->
		<mkdir dir="${dist}" />

		<!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
		<jar jarfile="${dist}/${ant.project.name}.jar" basedir="${build}" />
	</target>

	<target name="clean" description="clean up">
		<!-- Delete the ${build} and ${dist} directory trees -->
		<delete dir="${build}" />
		<delete dir="${dist}" />
	</target>
</project>