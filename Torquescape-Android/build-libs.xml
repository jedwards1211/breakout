<project name="Torquescape-Android" default="copy-dependencies" basedir=".">
	<!-- set global properties for this build -->
	<property name="src" location="src" />
	<property name="build" location="build" />
	<property name="dist" location="dist" />
	<property name="jogl-libs" location="C:/jogamp-all-platforms/jar" />
	<property name="JAVA_HOME" location="C:/Program Files/Java/jdk1.7.0_15" />

	<target name="compile-dependencies">
		<ant antfile="../andork-core/build.xml" inheritAll="false" target="dist" />
		<ant antfile="../andork-math/build.xml" inheritAll="false" target="dist" />
		<ant antfile="../torquescape-core/build.xml" inheritAll="false" target="dist" />
	</target>

	<target name="clean-dependencies">
		<ant antfile="../andork-core/build.xml" inheritAll="false" target="clean" />
		<ant antfile="../andork-math/build.xml" inheritAll="false" target="clean" />
		<ant antfile="../torquescape-core/build.xml" inheritAll="false" target="clean" />
		<delete>
			<fileset dir="libs" includes="*.jar" excludes="android-support-v4.jar"/>
		</delete>
	</target>

	<target name="copy-dependencies" depends="compile-dependencies">
		<copy todir="libs">
			<fileset dir="../andork-core/dist/lib">
				<include name="andork-core.jar" />
			</fileset>
			<fileset dir="../andork-math/dist/lib">
				<include name="andork-math.jar" />
			</fileset>
			<fileset dir="../torquescape-core/dist/lib">
				<include name="torquescape-core.jar" />
			</fileset>
			<fileset dir="C:/Program Files/Java/guava-14.0.1">
				<include name="guava-14.0.1.jar" />
			</fileset>
			<fileset dir="C:/Program Files/Java/Java3D/1.5.1/lib/ext">
				<include name="vecmath.jar" />
			</fileset>
		</copy>
	</target>
</project>